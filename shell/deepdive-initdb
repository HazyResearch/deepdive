#!/usr/bin/env bash
# deepdive-initdb -- Initializes the underlying database for the DeepDive application
# > deepdive initdb
##
set -eu

# find the current application
APP_HOME=$(find-deepdive-app)
export APP_HOME
cd "$APP_HOME"

# make sure database is created based on the database type
eval "$(parse-deepdive-app-db-url)"
case $DBTYPE in
    postgresql)
        dropdb $DBNAME || true
        createdb $DBNAME
        ;;

    mysql)
        mysqladmin -h $DBHOST -P $DBPORT -u $DBUSER -f drop   $DBNAME || true
        mysqladmin -h $DBHOST -P $DBPORT -u $DBUSER -f create $DBNAME
        ;;

    *)
        error "$DBTYPE: Initialization is not supported for the database type"
esac

# make sure the underlying database exists, and the necessary tables are all created
deepdive-sql <schema.sql

# load the input data
! [[ -x input/init.sh ]] ||
    input/init.sh "$@"
